<div id="<%= dom_id friend %>" class="shadow p-4 my-4 rounded hover:shadow-blue-300">
  <p class="my-5">
    <% if friend.photo? %>
      <%= image_tag friend.photo, class: "rounded-full w-32 h-32" %>
    <% else %>
      <%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(friend.email)}?s=200&d=identicon", class: "rounded-full w-32 h-32" %>
    <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= friend.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= friend.last_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= friend.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= friend.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Twitter:</strong>
    <%= friend.twitter %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this friend", friend, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this friend', edit_friend_path(friend), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
